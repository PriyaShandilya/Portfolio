    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const typingTextElement = document.getElementById('typing-text');
            const phrases = ["FullStack Developer", "Software Developer"]; // PHRASES TO CYCLE THROUGH
            let phraseIndex = 0;
            let charIndex = 0;
            let isDeleting = false;
            const typingSpeed = 100;
            const deletingSpeed = 60;
            const pauseTime = 1500;

            function typeWriter() {
                const currentPhrase = phrases[phraseIndex];

                // Determine if we are adding or removing a character
                if (isDeleting) {
                    typingTextElement.textContent = currentPhrase.substring(0, charIndex - 1);
                    charIndex--;
                } else {
                    typingTextElement.textContent = currentPhrase.substring(0, charIndex + 1);
                    charIndex++;
                }

                let currentSpeed = isDeleting ? deletingSpeed : typingSpeed;

                if (!isDeleting && charIndex === currentPhrase.length) {
                    // Done typing, start deleting after a pause
                    currentSpeed = pauseTime;
                    isDeleting = true;
                } else if (isDeleting && charIndex === 0) {
                    // Done deleting, switch to next phrase
                    isDeleting = false;
                    // Cycle to the next phrase
                    phraseIndex = (phraseIndex + 1) % phrases.length;
                    currentSpeed = typingSpeed;
                }

                // Call this function again after the calculated delay
                setTimeout(typeWriter, currentSpeed);
            }

            // Start the typing effect when the page loads
            typeWriter();
        });
    </script>
